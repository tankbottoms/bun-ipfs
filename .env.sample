# bun-ipfs configuration
# Copy this file to .env and update with your values
# Or run: bun-ipfs config

# IPFS Node Configuration
# Comma-separated list of nodes: name:hostname:ip:apiPort:gatewayPort:hasIpnsKeys
IPFS_NODES="local:localhost:127.0.0.1:5001:8080:false"

# Default IPFS API port (used when not specified per-node)
IPFS_API_PORT=5001

# Default IPFS Gateway port (used when not specified per-node)
IPFS_GATEWAY_PORT=8080

# Public gateways for URL generation (comma-separated)
IPFS_PUBLIC_GATEWAYS="https://ipfs.io,https://dweb.link"

# Default public gateway for CLI mode
IPFS_DEFAULT_GATEWAY="https://ipfs.io"
